<html>
	<head>
		<style>
			body 
			{ 
				min-width: 420px; 
				overflow-x: hidden; 
				font-family: Arial, sans-serif; 
				font-size: 12px; 
			}
			input, textarea { width: 420px; }
			input#save { font-weight: bold; width: auto; }
		</style>
		<script>
			window.onload = function () {
				bg = chrome.extension.getBackgroundPage();

				x=bg.document.getElementById('0').textContent;
				sonuc=JSON.parse(x);
				document.getElementById("title").value = sonuc.baslik;
				document.getElementById("url").value = sonuc.doi;
				document.getElementById("summary").innerText = x;

			}
		</script>
	</head>
	<body>
		<form id="addbookmark" onsubmit="bg.location.reload();chrome.tabs.reload(); return false;">
			<p><label for="title">Title</label><br />
			<input type="text" id="title" name="title" size="50" value="" /></p>
			<p><label for="url">Url</label><br />
			<input type="text" id="url" name="url" size="50" value="" /></p>
			<p><label for="summary">Summary</label><br />
			<textarea id="summary" name="summary" rows="6" cols="35"></textarea></p>
			<p><label for="tags">Tags</label><br />
			<input type="text" id="tags" name="tags" size="50" value="" /></p>
			<p><input id="save" type="submit" value="Reload Extension"/></p>
		</form>
	</body>
</html>
